@using ProjektNotatek.Models.Notes;
@model EditNoteModel
@{
    ViewData["Title"] = "Edit note";
}
<form asp-controller="Notes" asp-action="Edit" metod="post">
    @Html.ValidationSummary()

    @Html.HiddenFor(m => m.EditedNoteContent)
    <div class="card mt-3 sticky_card">
        <div class="card-body border-bottom border-1">
            @Html.Partial("_Toolbar")
        </div>
        <div id="text-input" class="form-control mt-2 overflow-auto" contenteditable="true">
        </div>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary w-100 mt-2" onclick="updateEditedNoteContent();">Save</button>
    <a type="button" class="btn btn-primary w-100 mt-2" asp-area="" asp-controller="Notes" asp-action="Index">Back</a>
</form>

@Html.Partial("_Modals")


<script>   
const initializer = () => {
    document.getElementById('text-input').innerHTML = document.getElementById('EditedNoteContent').value;
}
window.onload = initializer();
</script>
