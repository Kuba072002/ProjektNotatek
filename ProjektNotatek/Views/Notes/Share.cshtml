@model ShareNoteModel
@{
    ViewData["Title"] = "Share note";
}

<form asp-action="Share" method="post">
    @Html.ValidationSummary()
    <label asp-for="Username">Username:</label>
    <input type-="text" asp-for="Username"  class="form-control" />
    <br/>
    <button type="submit" class="btn btn-primary w-100">Add</button>
    <a type="button" class="btn btn-primary w-100 mt-2" asp-area="" asp-controller="Notes" asp-action="Index">Back</a>
</form>
@if(Model.Usernames != null){
    <ul class="list-group mt-3 text-center">
    @foreach(var user in Model.Usernames) {
        <li class="list-group-item">@user</li> 
    }
    </ul>
}
