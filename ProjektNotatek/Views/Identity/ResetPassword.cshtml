@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<form asp-action="ResetPassword" class="d-flex flex-column align-items-center">
<div class="border rounded p-4">
    <h1 class="text-center">Reset password</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <input type="hidden" asp-for="Email" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    <br/>
    <div class="form-group">
        <input type="submit" value="Reset" class="btn btn-primary w-100" />
    </div>
</div>
</form>
